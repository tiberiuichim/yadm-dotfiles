[http]
	sslVerify = false
[credential]
	helper = /usr/share/git/credential/gnome-keyring/git-credential-gnome-keyring
[merge]
    tool = vimdiff
[mergetool]
    prompt = true
[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
    prompt = false
[diff]
    tool = vimdiff
